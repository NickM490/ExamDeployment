@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Belt Exam</h1>
    <!-- <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> -->
</div>

<div class="container">

<div class="row">



        <div class="col-md-6 text-center" >
        @model User
            <form asp-action="Register" asp-controller="Home" method="post">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input asp-for="Name" required>
        <hr>

                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email" required>
        <hr>

                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password" required>
        <hr>

                <span asp-validation-for="Confirm"></span>
                <label asp-for="Confirm"></label>
                <input asp-for="Confirm" required>
        <hr>

                
                <input value="Register" type="submit">    
                
            </form>

        </div>

        <div class="col-md-6 text-center">

            <form asp-action="Login" asp-controller="Home" method="post">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label>
                <input asp-for="Email">
        <hr>
                <span asp-validation-for="Password"></span>
                <label asp-for="Password"></label>
                <input asp-for="Password" required>
        <hr>        
                <input value="Login" type="submit">    
                
            </form>
        </div>
    </div>
</div>